<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/exo_black_opacity_30">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/video_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"></androidx.appcompat.widget.Toolbar>


    <Button
        android:id="@+id/episode_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:background="@drawable/exo_icon_next" />


    <Button
        android:id="@+id/episode_prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="120dp"
        android:background="@drawable/exo_icon_previous" />


    <ImageButton
        android:id="@id/exo_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/exo_icon_play" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/exo_icon_pause" />

    <TextView
        android:id="@+id/exo_subtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/exo_white_opacity_70" />

            <com.google.android.exoplayer2.ui.DefaultTimeBar

                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                app:played_color="@android:color/holo_orange_dark"
                app:scrubber_color="@android:color/holo_orange_light"
                app:unplayed_color="@android:color/darker_gray" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/exo_white_opacity_70" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnimals"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

    <View
        android:id="@+id/left_area"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|left"
        android:background="@drawable/left_area"
        android:visibility="gone" />

    <View
        android:id="@+id/right_area"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/right_area"
        android:visibility="gone" />
</FrameLayout>