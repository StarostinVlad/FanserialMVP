<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/exo_black_opacity_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/exo_rew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground" />

        <FrameLayout
            android:id="@+id/exo_ffwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="false"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/blockator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/episode_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:background="@drawable/exo_icon_next"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone" />


    <Button
        android:id="@+id/episode_prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginEnd="120dp"
        android:background="@drawable/exo_icon_previous"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone" />


    <ImageButton
        android:id="@id/exo_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/exo_icon_play"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/exo_icon_pause"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/exo_subtitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/exo_white_opacity_70" />

            <com.google.android.exoplayer2.ui.DefaultTimeBar

                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:focusable="true"
                android:nextFocusDown="@+id/voice_btn"
                app:played_color="@android:color/holo_orange_dark"
                app:scrubber_color="@android:color/holo_orange_light"
                app:unplayed_color="@android:color/darker_gray" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/exo_white_opacity_70" />

            <ImageButton
                android:id="@+id/voice_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_voice"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:nextFocusDown="@+id/rvAnimals" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnimals"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/video_fragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white" />

</FrameLayout>